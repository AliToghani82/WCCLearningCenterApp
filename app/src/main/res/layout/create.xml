<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundpic">

    <TextView
        android:id="@+id/textView"
        android:layout_width="354dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:gravity="center"
        android:background="@drawable/textborder"
        android:text="Whatcom Community Collage Learning Center"
        android:textAlignment="center"
        android:textColor="#a83232"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="376dp"
        android:layout_height="459dp"
        android:layout_marginTop="280dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="17dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="#b8b0b0"
                android:text="First Name"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/name"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/edittextborder"
                android:hint=" Legal Name"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center" />


            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="#b8b0b0"
                android:text="WCC Email Address"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/edittextborder"
                android:inputType="textPersonName"
                android:textColorHint="@color/black" />


            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="#b8b0b0"
                android:text="WCC SID"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@id/sid"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:ems="10"
                android:inputType="number"
                android:background="@drawable/edittextborder"
                android:textColorHint="@color/black"
                tools:layout_editor_absoluteY="122dp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center" />


            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="#b8b0b0"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/passwordc"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:ems="10"
                android:background="@drawable/edittextborder"
                android:hint="6 character min"
                android:inputType="textPassword"
                tools:layout_editor_absoluteY="116dp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="#b8b0b0"
                android:text="Re-enter Password"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/passwordcheckc"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:ems="10"
                android:background="@drawable/edittextborder"
                android:hint="Re-enter password"
                android:inputType="textPassword"
                tools:layout_editor_absoluteY="116dp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center" />


            <Switch
                android:id="@+id/switch1"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:checked="false"
                android:background="@drawable/edittextborder"
                android:text="Tutor Account :"
                android:layout_gravity="center"
                android:switchPadding="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/confrimtext"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="#b8b0b0"
                android:text="Tutor Confirmation ID"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/confirmc"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:ems="10"
                android:background="@drawable/edittextborder"
                android:hint="Tutor Confirmation ID"
                android:inputType="textPassword"
                tools:layout_editor_absoluteY="116dp" />
            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/createc"
                android:layout_width="150sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="Create"
                app:backgroundTint="#B10000" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="143dp"
        android:layout_height="124dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.033"
        app:srcCompat="@drawable/download" />


</androidx.constraintlayout.widget.ConstraintLayout>
